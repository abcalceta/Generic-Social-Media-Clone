<div class="card">
  <div class="card-body">

    <h1 class = "card-title">
      <%= @post.title %>
    </h1>
    <h2>
      by <%= @post.user.nickname %>
    </h2>
    <%= link_to 'Back', posts_path %>

    <p class="post-content">
      <%= @post.content %>
    </p>


    <% if user_signed_in? && current_user==@post.user %>
      <%= link_to 'Edit', edit_post_path(@post) %>
    <% end %>


  </div>
</div>




<div id="favorites">
  <%= render "favorites" %>
</div>
